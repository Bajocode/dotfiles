#!/bin/zs

# add aliases
source $HOME/.alias

# iTerm
# enable scrolling: https://apple.stackexchange.com/questions/332900/mouse-scroll-stopped-working-with-less-in-terminal
export LESS="-R"

# add commonly used folders to PATH
export PATH="/usr/local/bin:/usr/bin:/bin:/usr/sbin:/sbin"

# go
export GOPATH="$(brew --prefix)/Cellar/go/1.12.6/"
export GOROOT="/usr/local/opt/go/libexec/"
export PATH=$PATH:$(go env GOPATH)/bin

# https://hyperledger-fabric.readthedocs.io/en/latest/install.html
export PATH=$PATH:$HOME/hyperledger-fabric/fabric-samples/bin

# Fastlane
export export LC_ALL=en_US.UTF-8
export LANG=en_US.UTF-8

# Homebrew Cask
export HOMEBREW_CASK_OPTS="--appdir=~/Applications"

# Vscode
export PATH="$PATH:/Applications/Visual Studio Code.app/Contents/Resources/app/bin"

# nvm
export NVM_DIR="$HOME/.nvm"
[ -s "$NVM_DIR/nvm.sh" ] && . "$NVM_DIR/nvm.sh"  # This loads nvm
[ -s "$NVM_DIR/bash_completion" ] && . "$NVM_DIR/bash_completion"  # This loads nvm bash_completion

# kubernetes
export KUBECONFIG=$HOME/.kube/docker-desktop:$HOME/.bluemix/plugins/container-service/clusters/cat-test/kube-config-fra02-cat-test.yml:$HOME/.kube/gke_fabijanbajo_us-central1-a_fabijanbajo:$HOME/.bluemix/plugins/container-service/clusters/vin-dev/kube-config-ams03-vin-dev.yml:$HOME/.bluemix/plugins/container-service/clusters/orderer-staging/kube-config-fra02-orderer-staging.yml:$HOME/.bluemix/plugins/container-service/clusters/nvd-staging/kube-config-fra02-nvd-staging.yml:$HOME/.bluemix/plugins/container-service/clusters/axess-staging/kube-config-fra02-axess-staging.yml:$HOME/.bluemix/plugins/container-service/clusters/koopman-staging/kube-config-fra02-koopman-staging.yml:$HOME/.bluemix/plugins/container-service/clusters/vinturas-staging/kube-config-fra02-vinturas-staging.yml:$HOME/.bluemix/plugins/container-service/clusters/bn1elaef0kdql1v6g690/kube-config-fra02-completenetwork-development.yml:$HOME/.bluemix/plugins/container-service/clusters/vinturas-test/kube-config-fra02-vinturas-test.yml:$HOME/.bluemix/plugins/container-service/clusters/nvd-test/kube-config-fra02-nvd-test.yml:$HOME/.bluemix/plugins/container-service/clusters/koopman-test/kube-config-fra02-koopman-test.yml:$HOME/.bluemix/plugins/container-service/clusters/axess-test/kube-config-fra02-axess-test.yml:$HOME/.bluemix/plugins/container-service/clusters/orderer-test/kube-config-fra02-orderer-test.yml:
source "/usr/local/opt/kube-ps1/share/kube-ps1.sh"
PS1='$(kube_ps1)'$PS1
# autoload -U colors; colors
# source /usr/local/Cellar/zsh-kubectl-prompt/v1.0.1/etc/zsh-kubectl-prompt/kubectl.zsh
# RPROMPT='%{$fg[blue]%}$ZSH_KUBECTL_PROMPT%{$reset_color%}'
export K8S_EXAMPLE_SRV="k run --generator=run-pod/v1 -it srvlookup --image=tutum/dnsutils --rm --restart=Never -- dig SRV kubia.default.svc.cluster.local"
export K8S_SUB="toolchain-dev.ams03.containers.appdomain.cloud" 

# IBM cloud
IC_DIR=/usr/local/ibmcloud
if [ -d $IC_DIR ]; then
  source ${IC_DIR}/autocomplete/zsh_autocomplete
fi

# Gcloud
CLOUD_SDK_HOME=/usr/local/Caskroom/google-cloud-sdk/latest/google-cloud-sdk
source "${CLOUD_SDK_HOME}/completion.zsh.inc"

# vault
export VAULT_ADDR='http://127.0.0.1:8200'

# fastlane
export LC_ALL=en_US.UTF-8
export LANG=en_US.UTF-8
